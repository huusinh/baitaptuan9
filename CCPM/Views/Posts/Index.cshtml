@model IEnumerable<CCPM.Models.Post>


<table class="table table-hover table-light">
    <thead class="table-dark">
        <tr class="text-center">
            <th>Id</th>
            <th>Title</th>
            <th>Datasubmitted</th>
            <th>status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Post p in Model)
        {
            <tr>
                <td class="font-weight-bold">
                    @p.Id
                </td>
                <td>
                    @p.Tittle
                </td>
                <td>
                    @p.Datasubmitted
                </td>
                <td>
                    @p.Status
                </td>

                <td>
                    <button class="text-primary">Xóa</button>
                    <button class="text-danger">Sửa</button>
                </td>
            </tr>
        }
    </tbody>
</table>


